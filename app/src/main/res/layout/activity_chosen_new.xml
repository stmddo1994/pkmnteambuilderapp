        android:id="@+id/body10_imageButton_blob"
        android:src="@drawable/blob"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:id="@+id/body11_imageButton_upright"
