    <TextView
        android:layout_height="62dp"
        android:layout_width="241dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bodyType_textView"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="Please choose a body type! "
        android:fontFamily="@font/akaya_telivigala"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:id="@+id/continue_button"
        android:text="continue"/>

    <TextView
        android:layout_height="102dp"
        android:layout_width="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="204dp"
        android:id="@+id/textView13"
        android:textSize="24sp"
        android:textAlignment="center"
        android:text="The body type will play an important role in creating the Pokemon! "
        android:fontFamily="@font/akaya_telivigala"/>

    <EditText
        android:layout_height="59dp"
        android:layout_width="209dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/pkmGivenName_editText"
        app:layout_constraintTop_toBottomOf="@+id/textView13"
        android:layout_marginTop="13dp"
        app:layout_constraintVertical_bias="0.0"
        android:inputType="textPersonName"
        android:hint="Enter Pokemon Name"
        android:ems="10"/>

    <Spinner
        android:layout_height="55dp"
        android:layout_width="172dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp"
        android:id="@+id/type1_spinner"/>
