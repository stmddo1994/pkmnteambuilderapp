        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_height="84dp"
        android:layout_width="97dp"
        android:id="@+id/body4_imageButton_insect"
        android:src="@drawable/insect"
        android:scaleType="fitXY"/>

</LinearLayout>


